{
  "name": "mexo-web",
  "version": "0.1.0",
  "private": true,
  "description": "mexo",
  "scripts": {
    "start": "icejs start",
    "build": "icejs build",
    "build:dev": "icejs build",
    "i18n": "yarn i18n:extract",
    "i18n:extract": "lingui extract --clean",
    "i18n:compile": "lingui compile",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "eslint:fix": "npm run eslint -- --fix",
    "stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "prettier": "prettier --write '@(src)/**/*.@(ts|tsx)'"
  },
  "dependencies": {
    "@lingui/react": "^3.13.0",
    "ahooks": "^3.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.5.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@iceworks/spec": "^1.0.0",
    "@lingui/cli": "^3.13.0",
    "@lingui/core": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.19",
    "eslint": "^7.30.0",
    "ice.js": "^2.0.0",
    "stylelint": "^13.7.2"
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
